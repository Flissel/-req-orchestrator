# Basis
API_HOST=0.0.0.0
API_PORT=5000

# Betriebslogik

RATE_LIMIT_RPM=30
PURGE_RETENTION_H=24

# LLM
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-min
# LLM Feineinstellungen
LLM_TEMPERATURE=0.0
LLM_TOP_P=1.0
LLM_MAX_TOKENS=0

# Prompts (optional, leerlassen = Default verwenden)
EVAL_SYSTEM_PROMPT_PATH=./config/prompts/evaluate.system.txt
SUGGEST_SYSTEM_PROMPT_PATH=./config/prompts/suggest.system.txt
REWRITE_SYSTEM_PROMPT_PATH=./config/prompts/rewrite.system.txt

# Kriterien und Entscheidungslogik
CRITERIA_CONFIG_PATH=./config/criteria.json
VERDICT_THRESHOLD=0.7
SUGGEST_MAX=3
# Optional: Server schreibt merged Markdown automatisch in diese Datei (leer lassen = nicht schreiben)
OUTPUT_MD_PATH=./docs/requirements.out.md

# Datenbankpfad
# Für lokalen Start: app.db im Projekt
# Für Docker Compose wird dieser Wert typischerweise auf /data/app.db gesetzt
SQLITE_PATH=app.db
# Batch-Verarbeitung
BATCH_SIZE=10
MAX_PARALLEL=3
REQUIREMENTS_MD_PATH=./docs/requirements.md